{
  "name": "@northscaler/securable-trait",
  "version": "1.0.0-rc.0",
  "description": "Securable trait that domain object can express to provide access control.",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/northscaler-public/securable-trait.git"
  },
  "keywords": [
    "acl",
    "security",
    "access control",
    "authorization",
    "rbac",
    "instance-level security",
    "application-level security"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "npm install && npm test",
    "transpile": "run-s transpile-main transpile-test",
    "transpile-main": "babel --delete-dir-on-start --verbose --out-dir lib/main --copy-files src/main",
    "transpile-test": "babel --delete-dir-on-start --verbose --out-dir lib/test --copy-files src/test",
    "clean-coverage": "rimraf .nyc_output coverage",
    "preunit-integration": "run-s clean-coverage",
    "unit-integration": "nyc --check-coverage --lines 80 -x 'lib/test' --exclude-after-remap false mocha 'lib/test/unit/**/*.spec.js' 'lib/test/integration/**/*.spec.js'",
    "postunit-integration": "run-s report",
    "preintegration": "run-s clean-coverage",
    "integration": "nyc --check-coverage -x 'lib/test' --exclude-after-remap false mocha 'lib/test/integration/**/*.spec.js'",
    "postintegration": "run-s report",
    "i": "mocha 'src/test/integration/**/*.spec.js' | npx bunyan",
    "preunit": "run-s clean-coverage",
    "unit": "nyc --check-coverage -x 'lib/test' --exclude-after-remap false mocha 'lib/test/unit/**/*.spec.js'",
    "postunit": "run-s report",
    "u": "mocha 'src/test/unit/**/*.spec.js' | npx bunyan",
    "test": "run-s transpile unit-integration lint",
    "report": "nyc report --reporter=html",
    "cov": "open coverage/index.html",
    "lint": "standard --verbose 'src/**/*.js'",
    "format": "standard --fix 'src/**/*.js'",
    "make-distribution": "run-s transpile finalize-distribution",
    "finalize-distribution": "copyfiles --verbose package.json package-lock.json README.md LICENSE lib/main",
    "postfinalize-distribution": "run-s doc",
    "doc": "jsdoc --verbose -d lib/main/doc -r -c jsdoc.json -R lib/main/README.md lib/main",
    "prelink": "run-s make-distribution",
    "link": "mkdir -p lib/main && cd lib/main && npm link; cd ../..",
    "unlink": "mkdir -p lib/main && cd lib/main && npm unlink; cd ../.."
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/polyfill": "7.7.0",
    "@northscaler/acl": "1.1.0",
    "@northscaler/error-support": "3.0.1",
    "@northscaler/method-access-controller": "1.0.0",
    "@northscaler/mutrait": "1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "7.7.4",
    "@babel/core": "7.7.4",
    "@babel/plugin-proposal-optional-chaining": "7.7.4",
    "@babel/preset-env": "7.7.4",
    "@babel/register": "7.7.4",
    "@babel/traverse": "7.7.4",
    "@babel/types": "7.7.4",
    "acorn": "7.1.0",
    "babel-eslint": "10.0.3",
    "chai": "4.2.0",
    "copyfiles": "2.1.1",
    "dirty-chai": "2.0.1",
    "jsdoc": "3.6.3",
    "mocha": "6.2.2",
    "npm-cli-login": "0.1.1",
    "npm-run-all": "4.1.5",
    "nyc": "14.1.1",
    "rimraf": "3.0.0",
    "standard": "14.3.1",
    "uuid": "3.3.3"
  },
  "babel": {
    "sourceMaps": "inline",
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-optional-chaining",
        {
          "loose": false
        }
      ]
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "mocha": {
    "colors": true,
    "require": "@babel/register"
  }
}
